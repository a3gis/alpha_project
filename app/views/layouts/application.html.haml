!!!
%html
	%head
		%title Alpha
		= stylesheet_link_tag    "application", media: "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		%p#user
			- if current_user
				Logged in as <b>#{current_user.pseudo}</b>
			- else
				Not logged in. #{link_to 'Log In', new_session_path} or #{link_to 'Register', new_user_path}
		= yield 